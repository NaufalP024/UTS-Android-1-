<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.UTSAndroid" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorOnPrimary">@color/greenPrimer</item>
        <item name="colorAccent">@color/greenSecond</item>
        <item name="colorContainer">@color/greenThird</item>
        <item name="colorBackgroundFloating">@color/greenFour</item>
        <item name="colorButtonNormal">@color/bluePrimer</item>
        <item name="colorControlActivated">@color/orangePrimer</item>
        <item name="colorControlHighlight">@color/orangeSecond</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorOnBackground">@color/greyPrimer</item>
        <item name="colorOnContainer">@color/greySecond</item>

    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize10Percent" parent="">
        <item name="cornerSize">10%</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize5Percent" parent="">
        <item name="cornerSize">5%</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <!-- Chip dengan warna hijau -->
    <style name="ChipStyle">
        <item name="android:background">@drawable/chip_background</item>
        <item name="android:textColor">#2E9282</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Chip dengan warna merah muda -->
    <style name="ChipRedStyle">
        <item name="android:background">@drawable/chip_background_red</item>
        <item name="android:textColor">#FF6B6B</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Kartu pendidikan -->
    <style name="CardStyle">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">4dp</item>
    </style>


</resources>